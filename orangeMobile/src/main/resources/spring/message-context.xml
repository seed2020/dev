<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
	
	<bean id="messageSource" class="com.innobiz.orange.web.cm.utils.CustomMessageSource">
		<property name="basenames">
			<list>
			 	<value>WEB-INF/message/message-cols</value>
			 	<value>WEB-INF/message/message-cols2</value>
			 	<value>WEB-INF/message/message-cm</value>
			 	<value>WEB-INF/message/message-pt</value>
			 	<value>WEB-INF/message/message-or</value>
			 	<value>WEB-INF/message/message-ap</value>
				<value>WEB-INF/message/message-bb</value>
				<value>WEB-INF/message/message-wc</value>
				<value>WEB-INF/message/message-wb</value>
				<value>WEB-INF/message/message-wr</value>
				<value>WEB-INF/message/message-wt</value>
				<value>WEB-INF/message/message-wv</value>
				<value>WEB-INF/message/message-ct</value>
				<value>WEB-INF/message/message-em</value>
				<value>WEB-INF/message/message-dm</value>
				<value>WEB-INF/message/message-st</value>
				<value>WEB-INF/message/message-wf</value>
				<value>WEB-INF/message-m/message-mcm</value>
				<value>WEB-INF/message-m/message-mpt</value>
				<value>WEB-INF/message-m/message-map</value>
				<value>WEB-INF/message-m/message-mor</value>
				<value>WEB-INF/message-m/message-mbb</value>
			</list>
		</property>
		<property name="defaultEncoding" value="UTF-8"/>
		<property name="cacheSeconds">
			<value>10</value>
		</property>
	</bean>
	
	<bean id="stayMessageSourceAccessor" class="org.springframework.context.support.MessageSourceAccessor">
		<constructor-arg ref="messageSource"/>
	</bean>
	
	<bean id="messageProperties" class="com.innobiz.orange.web.cm.utils.MessageProperties">
		<property name="messageSourceAccessor" ref="stayMessageSourceAccessor"></property>
	</bean>
</beans> 